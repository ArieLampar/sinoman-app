{
  "mcpServers": {
    "sinoman-cooperative": {
      "command": "node",
      "args": ["--loader", "ts-node/esm", "mcp/server.ts"],
      "cwd": ".",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "security": {
    "enabled": true,
    "rateLimit": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 60000
    },
    "auditLogging": {
      "enabled": true,
      "level": "info",
      "retentionDays": 90
    },
    "permissions": {
      "enabled": true,
      "tenantIsolation": true,
      "roleBasedAccess": true
    }
  },
  "cooperative": {
    "features": {
      "memberManagement": true,
      "savingsAccount": true,
      "wasteBank": true,
      "ecommerce": true,
      "financialServices": true,
      "auditTrail": true
    },
    "limits": {
      "maxDepositPerDay": 10000000,
      "maxWithdrawalPerDay": 5000000,
      "maxTransferPerDay": 2000000,
      "maxFileSize": 5242880
    }
  },
  "monitoring": {
    "enabled": true,
    "dashboardPath": "/admin/security",
    "metricsRetention": "30d",
    "alerting": {
      "email": true,
      "webhook": true,
      "sms": false
    }
  }
}